extends ../layout/index

block contenido

   header(style="background-color: #025564; color: white; padding: 1em; margin-top: 20px;")
      .banner-content(style="height: 100%; display: flex; justify-content: space-between; align-items: center;")
         .logo(style="max-width: 80px; margin-right: 0px;")
            img(src="/img/LOGOBANNER.png", alt="Logo" style="max-width: 100%;")
         nav(style="text-align: rigth;")
            ul(style="list-style-type: none; margin: 0; padding: 0;")
            li(style="display: inline; margin-right: 10px; position: relative;")
               a(href="inicio", style="text-decoration: none; color: white;") Inicio |
            li(style="display: inline; margin-right: 10px; position: relative;")
               a(href="login", style="text-decoration: none; color: white;") Iniciar sesión


   .py-10
      h1.text-center.text-4xl.font-extrabold Crear cuenta 

      if errores
         div(class="max-w-md mx-auto my-10")
            each error in errores 
               p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

      .mt-8.mx-auto.max-w-md
         .bg-white.py-8.px-4.shadow
            form(method="POST" action="/auth/registro")
               div
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombres
                  input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombres" type="text" name="nombre" value= usuario ?  usuario.nombre : '' )

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="apellido") Apellidos
                  input#apellido.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Apellidos" type="text" name="apellido" value= usuario ?  usuario.apellido : '' )
               
               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nacimiento") Fecha de Nacimiento
                  input#nacimiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Fecha de nacimiento" type="date" name="nacimiento" value= usuario ?  usuario.nacimiento : '' )

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="telefono") Número de Teléfono
                  input#telefono.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Número de teléfono" type="tel" name="telefono" value= usuario ?  usuario.telefono : '' )

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="genero") Genero
                  input#genero.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Genero" type="text" name="genero" value= usuario ?  usuario.genero : '' )

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Correo electronico
                  input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo electronico" type="email" name="email" value= usuario ?  usuario.email : '' )

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contraseña
                  input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")

               div.mt-5
                  label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="repetir_password") Confirma tu contraseña
                  input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repetir_password")
               
               div.flex.items-center.justify-between.mt-5
                  a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia sesión
                  a.text-gray-500.text-xs(href="/auth/contrasena") Olvide mi contraseña
                  
               div.mt-5
               input(class="w-full bg-teal-700 hover:bg-teal-900 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")

   .py-5

    footer(style="background-color: #025564; color: white; text-align: center; padding: 1em;")
